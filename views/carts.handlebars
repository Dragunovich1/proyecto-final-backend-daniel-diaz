<!DOCTYPE html>
<html>
<head>
    <title>Carrito</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/milligram/1.4.1/milligram.min.css">
    <style>
        button {
            background-color: #333;
            color: #fff;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 3px;
            cursor: pointer;
        }
        button:hover {
            background-color: #555;
        }
        .cart-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
            padding: 1rem;
            border: 1px solid #ddd;
            border-radius: 3px;
        }
        .cart-actions {
            display: flex;
            gap: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Carrito</h1>
        {{#if cart.products.length}}
            <ul class="product-list">
                {{#each cart.products}}
                <li class="cart-item">
                    <span>{{this.product.name}} - ${{this.product.price}} x {{this.quantity}}</span>
                    <div class="cart-actions">
                        <form action="/api/carts/{{../cart._id}}/product/{{this.product._id}}?_method=put" method="POST" style="margin: 0;">
                            <input type="hidden" name="quantity" value="{{increment this.quantity}}">
                            <button type="submit">+</button>
                        </form>
                        <form action="/api/carts/{{../cart._id}}/product/{{this.product._id}}?_method=put" method="POST" style="margin: 0;">
                            <input type="hidden" name="quantity" value="{{decrement this.quantity}}">
                            <button type="submit" {{#eq this.quantity 1}}disabled{{/eq}}>-</button>
                        </form>
                        <form action="/api/carts/{{../cart._id}}/product/{{this.product._id}}?_method=delete" method="POST" style="margin: 0;">
                            <button type="submit">Eliminar</button>
                        </form>
                    </div>
                </li>
                {{/each}}
            </ul>
        {{else}}
            <p>El carrito está vacío.</p>
        {{/if}}
    </div>
</body>
</html>
